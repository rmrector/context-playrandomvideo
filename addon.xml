<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="context.playrandomvideo" name="Play Random Video" version="1.0.1" provider-name="rmrector">
  <requires>
    <import addon="xbmc.python" version="2.20.0" />
    <import addon="script.playrandomvideos" version="0.5.0" />
  </requires>
  <extension point="kodi.context.item" library="context.py">
    <item>
      <label>30005</label>
      <visible>Window.IsVisible(videos) + ![Container.Content(movies) | Container.Content(episodes)]</visible>
    </item>
  </extension>
  <extension point="kodi.addon.metadata">
    <summary lang="en">Plays a random video from the selected item.</summary>
    <description lang="en">Plays a random video from the selected item.</description>
		<disclaimer lang="en" />
		<platform>all</platform>
		<language />
		<website>https://github.com/rmrector/context.playrandomvideo</website>
		<forum>http://forum.kodi.tv/showthread.php?tid=238613</forum>
		<email />
